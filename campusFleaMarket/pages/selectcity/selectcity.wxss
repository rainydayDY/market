.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
text{
    font-family: Microsoft Yahei;
    font-size: 28rpx;
}
.locate_layer{
  background-color: #f0f0f0;
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  bottom: 0;
}
.white_bg{
  display: block;
  background-color: white;
}
.gpsline{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin: 30rpx auto;
  vertical-align: baseline;
}
.gray_text{
  color:#a1a1a1;
  font-size: 22rpx;
  vertical-align: baseline;
  margin-left: 10rpx;
}
.marginleft{
  margin-left: 30rpx;
}
.city_wrap{
  width: 100%;
  box-sizing: border-box;
 background-color: #f0f0f0;
 padding-bottom: 40rpx;
}
.city_wrap>view{
  display: inline-block;
  padding: 0 20rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}