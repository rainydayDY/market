.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
text{
    font-family: Microsoft Yahei;
    color:#353535;
}
.goods_name{
    width:660rpx;
    height:200rpx;
    border: 1px solid #55d896;
    border-radius: 4px;
    line-height: 80rpx;
    text-align: left;
    margin-top: 20rpx;
    font-family: Microsoft Yahei;
    padding: 20rpx;
    font-size: 30rpx;
    color:#888888;
}
.upload{
    width:720rpx;
    height:auto;
    margin-top: 30rpx;
}
.user_img{
    width:220rpx;
    height:220rpx;
    float: left;
    margin: 10rpx;
    text-align: center;
    position: relative;
}
.select_img{
 width:220rpx;
    height:220rpx;
}
.cha{
    position: absolute;
    right:0;
    top:0;
    width:40rpx;
    height:40rpx;

}
.upload_img{
    display: inline-block;
    width:128rpx;
    height:128rpx;
    margin-top: 46rpx;
}
.hide{
    display: none;
}
.select_type,.label_view{
    width:680rpx;
    height: auto;
    padding: 20rpx;
    text-align: left;
}
.select_type>button{
    float: left;
    width:250rpx;
    height: 94rpx;
    margin-top: 40rpx;
    font-size: 30rpx;
    line-height: 94rpx;
    background-color: #55d896;
}
.select_type>input{
    float: left;
    width:190rpx;
    height: 90rpx;
    border: 1px solid #55d896;
    border-radius: 4px;
    margin-top: 40rpx;
    margin-left: 20rpx;
    text-align: center;
    font-size: 28rpx;
}
.label_view>text{
  font-size: 28rpx;
}
.label_input{
   width:640rpx;
    height:60rpx;
    border: 1px solid #55d896;
    border-radius: 4px;
    line-height: 80rpx;
    text-align: left;
    margin-top: 20rpx;
    font-family: Microsoft Yahei;
    padding: 20rpx;
    font-size: 30rpx;
    color:#888888;
}
.refer_label{
    width:640rpx;
    height:auto;
    margin-top: 20rpx;
    padding: 20rpx;
}
.refer_label>text{
     float: left;
     font-size: 30rpx;
}
.goods_label{
    float: left;
    border:1px solid #55d896;
    width:auto;
    padding: 0 20rpx;
    height:60rpx;
    margin:8rpx; 
    border-radius: 8rpx;
    text-align: center;
    line-height: 60rpx;
    color:#353535;
    font-size: 30rpx;
    font-family:  Microsoft Yahei;
}
.button{
    width:700rpx;
    height:100rpx;
    flex-direction: row;
    margin: 30rpx 0;
}
.button>button{
  font-size: 30rpx;
  line-height: 100rpx;
}
.button>button:nth-child(2){
  background-color: #55d896;
}
.publish{
    width:300rpx;
    height:100rpx;
}
.layer{
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background: white;
    z-index: 99;
}
.typeview{
    width:92%;
    height:95%;
    background-color: white;
    padding: 4%;
}
.typeview:after{
    display: block;
    content: '';
    clear: both;
}
.typelabel{
    float: left;
    border:1px solid #55d896;
    width:160rpx;
    height:60rpx;
    margin:24rpx; 
    border-radius: 8rpx;
    text-align: center;
    line-height: 60rpx;
    color:#353535;
    font-size: 30rpx;
    font-family:  Microsoft Yahei;
}
.left{
    float: left;
}
.right{
    float:right;
}
.type_top{
  width: 100%;
  height: 80rpx;
  margin-bottom: 30rpx;
}
.typetitle{
  float: left;
  padding: 20rpx;
  background-color: #55d896;
  color: white;
  border-radius: 8rpx;
  margin-right: 48rpx;
  font-size: 30rpx;
}