.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
text{
    font-family: Microsoft Yahei;
    color:#353535;
}
.search,.type{
     display: flex;
    flex-direction: row;
}
.search_input{
    width:570rpx;
    height:80rpx;
    border: 1px solid #09bb07;
    border-radius: 4px;
    line-height: 80rpx;
    text-align: center;
    margin-top: 20rpx;
    font-family: Microsoft Yahei;
}
.search_img{
    width:80rpx;
    height:80rpx;
    margin-top: 20rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.active{
   box-shadow: 1px -1px 2px #338d01;
}
.first_type{
    margin-top:30rpx;
    width:200rpx;
    height:990rpx;
    background-color: #f5f5f5;
}
.second_type{
    margin-top:30rpx;
    margin-left: 30rpx;
    width:520rpx;
    height:auto;
    background-color: white;
    display: none;
}
.first_list{
    width:100%;
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
    font-family: Microsoft Yahei;
    font-size: 30rpx;
     color:#353535;
     border-bottom: 2px solid white;
}
.select{
    background: white;
}
.show{
    display: block;
}
.view_img{
    width:140rpx;
    height:140rpx;
    border-radius: 100%;
    margin-left: 15rpx;
}
.view_text{
    margin-top: 20rpx;
    font-size: 28rpx;
}
.second_view{
    width:170rpx;
    height:240rpx;
    float: left;
    text-align: center;
    display: flex;
    flex-direction: column;
}
.publish{
    position: fixed;
    bottom:20rpx;
    right:20rpx;
    width:80rpx;
    height:80rpx;
    z-index: 99;
}