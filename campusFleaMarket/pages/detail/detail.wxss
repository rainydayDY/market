.container{
    display: flex;
    flex-direction: column;
    /*align-items: center;*/
    box-sizing: border-box;
}
text{
    font-family: Microsoft Yahei;
}
.maincolor{
  color:#55d896;
}
.publisher{
    width:710rpx;
    height:100rpx;
    padding: 20rpx 0;
    margin: auto;
}
.publisher>.pub_time{
    margin-top: 38rpx;
}
.pupic{
    width:100rpx;
    height:100rpx;
    position: relative;
    float: left;
}
.userpic{
    width:100%;
    height: 100%;
}
.usergrade{
    float: right;
    width:500rpx;
    height: 48rpx;
}
.grade_p{
    font-size: 30rpx;
    color:#888888;
    line-height: 48rpx;
}
.grade{
    width:48rpx;
    height:48rpx;
    vertical-align: middle;
}
.sex{
    width:32rpx;
    height:32rpx;
    position: absolute;
    right:-16rpx;
    bottom:-16rpx;
}
.goods_name{
    width:710rpx;
    height:auto;
    text-align: left;
    font-size: 30rpx;
    padding: 10rpx 20rpx;
}
.location{
   width:710rpx;
   height:40rpx;
    padding: 20rpx;
}
.location>image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.location>text{
  line-height: 40rpx;
  margin-left: 10rpx;
  font-size: 26rpx;
  color:#576b95;
}
.campusname{
  font-size: 26rpx;
  color:#576b95;
  line-height: 48rpx;
  margin-left: 10rpx;
}
.label_view{
    width:710rpx;
    height:60rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
    line-height: 60rpx;
}
.goods_label{
    float: left;
    border:1px solid #55d896;
    width:auto;
    padding: 0 20rpx;
    height:60rpx;
    margin-right:20rpx; 
    border-radius: 8rpx;
    text-align: center;
    line-height: 60rpx;
    color:#353535;
    font-size: 28rpx;
    font-family:  Microsoft Yahei;
}
.pic_view{
    width:710rpx;
    padding: 20rpx;
}
.pic_view>image{
    float: left;
    width:230rpx;
    height:230rpx;
    margin-top:10rpx;
}
.pic_view>image:nth-child(3n-1){
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.pub_time{
    color:#888888;
    font-size: 24rpx;
}
.message_view>.pub_time{
    margin-top: 8rpx;
}
.value_view{
    width:710rpx;
    height:80rpx;
    margin:0 20rpx;
    padding: 40rpx 0;
    border-bottom: 1px solid #e4e4e4;
    position: relative;
}
.goods_price{
    float: right;
    margin-right: 50rpx;
    color:red;
    font-weight: bold;
}
.goods_cost{
    float: right;
    margin-right: 50rpx;
    color:#777;
    font-size: 28rpx;
    text-decoration: line-through;
}
.collect{
     float: left;
     margin-left: 80rpx;
     width:48rpx;
     height:48rpx;
     margin-top: 20rpx;
}
.collect_num{
    float: left;
     margin-left: 10rpx;
    font-size: 30rpx;
    margin-top: 20rpx;
}
.check_btn{
    float: left;
    width:200rpx;
    padding: 20rpx;
    text-align: center;
    border:1px solid #55d896;
    font-size: 32rpx;
    border-radius: 8rpx;
}
.message_btn{
    float: right;
    width:200rpx;
    padding: 20rpx;
    text-align: center;
    border:1px solid #55d896;
    font-size: 32rpx;
    border-radius: 8rpx;
}
.collect_view{
    width:710rpx;
    margin-left:20rpx;
    height:auto;
    margin-top: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #e4e4e4;
    
}
.collect_view:after,.collect_line:after,.message_view:after{
    display: block;
    content:'';
    clear:both;
}
.collect_view>image{
    float: left;
    width:40rpx;
    height:40rpx;
    margin-top: 10rpx;
}
.collect_line{
   float: right;
   width: 650rpx;
}
.collect_line>image{
    float: left;
    width:60rpx;
    height:60rpx;
    border:1px solid #f2f2f2;
    margin-bottom: 20rpx;
}
.collect_line>image:not(:nth-child(9n)){
    margin-right: 10rpx;
}
.mes_list>image{
 width:60rpx;
    height:60rpx;
}
.left{
    float:left;
}
.right{
    float:right;
}
.mes_name{
    font-size:28rpx;
    margin-top:8rpx;
    color:#576b95;
}
.re_name{
     color:#576b95;
}
.message_view{
    display: block;
    width:570rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    margin-top: -10rpx;
}
.message{
    display: block;
    width:570rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-top: 8rpx;
}
.comment_line{
    padding: 16rpx 0;
    border-bottom: 1rpx solid #e7e7eb;
}
show{
    display: block;
}
.hide{
    display: none;
}
.back{
  position: absolute;
  top: -80rpx;
  right:30rpx;
  width:80rpx;
  height:80rpx;
}