.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
text{
    font-family: Microsoft Yahei;
    font-size: 34rpx;
    color:#353535;
}
.background_wall{
  width:100%;
  height:300rpx;
  background: rgba(95,160,55,0.3);
  position: relative;
}
.background_wall>image{
  width:120rpx;
  height:120rpx;
  border-radius: 60rpx;
  position: absolute;
  bottom: -60rpx;
  right:50rpx;
}
.sixin{
  position: absolute;
  width:200rpx;
  bottom: -150rpx;
  right:0;
}
.sixin>image{
  width:30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.sixin>text{
  font-size: 28rpx;
  color:black;
  vertical-align: middle;
}
.heart_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  height:200rpx;
  margin-top: 50rpx;
  position: relative;
}
.contact{
  position: absolute;
  top:80rpx;
  left:380rpx;
  margin-left: -50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color:white;
}
.heart_left{
 width:100rpx;
  height:170rpx;
  background-color:#55d896;
  box-shadow: 0 2px 16px #55d896,0 0 1px #55d896,0 0 1px #55d896;
  border-radius: 50rpx 50rpx 0 0;
  transform-origin: 50rpx 50rpx;
  transform: rotate(-45deg);
}
.heart_right{
  width:100rpx;
  height:170rpx;
  background-color: #70ad47;
  box-shadow: 0 2px 16px #70ad47,0 0 1px #70ad47,0 0 1px #70ad47;
  border-radius: 50rpx 50rpx 0 0;
  transform-origin: 50rpx 50rpx;
  transform: rotate(45deg);
}
.herinfo{
  width:710rpx;
  height: auto;
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
}
.hername{
  font-size: 32rpx;
  font-weight: bold;
  color:black;
  line-height: 50rpx;
}
.herschool{
  font-size: 26rpx;
  color:#ccc;
  line-height: 50rpx;
}
.her_achieve{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.icon_wrap{
  width:48rpx;
  height:80rpx;
  text-align: center;
  margin-right: 60rpx;
}
.icon_wrap>image{
  display: inline-block;
  width:48rpx;
  height:48rpx;
}
.icon_wrap>text{
  font-size: 28rpx;
  color:black;
  font-weight: bold;
}
.pubulish_wrap{
  width:710rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}
.p_date{
  width:90rpx;
  font-size: 32rpx;
  color:black;
  font-weight: bold;
}
.p_month{
  font-size: 20rpx;
  color:black;
}
.p_img{
  width:150rpx;
  height:150rpx;
  margin-left: 10rpx;
}
.p_img>image{
  width: 100%;
  height: 100%;
}
.p_descrip{
  margin-left: 20rpx;
  width:440rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: justify;
  height:100rpx;
}
.p_num{
  width: 440rpx;
  font-size: 22rpx;
  color:#777;
}